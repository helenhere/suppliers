<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Datetime of purchase</th>
      <th>City of purchase</th>
      <th>Customer of purchase</th>
      <th>Supplier of purchase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.datetime_of_purchase %></td>
        <td><%= order.city.name if order.city.present? %></td>
        <td><%= order.customer.first_name if order.customer.present? %></td>
        <td><%= order.supplier.first_name if order.supplier.present? %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

